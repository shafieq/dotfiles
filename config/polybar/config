[colors]
darkred = 	${xrdb:color1:#cc241d}
darkgreen = 	${xrdb:color2:#98971a}
darkyellow = 	${xrdb:color3:#d79921}
darkblue = 	${xrdb:color4:#458588}
darkmagenta = 	${xrdb:color5:#b16286}
darkcyan = 	${xrdb:color6:#689d6a}
lightgray = 	${xrdb:color7:#a89984}
gray = 		${xrdb:color8:#928374}
red = 		${xrdb:color9:#fb4934}
green = 	${xrdb:color10:#b8bb26}
yellow = 	${xrdb:color11:#fabd2f}
blue = 		${xrdb:color12:#83a598}
magenta = 	${xrdb:color13:#d3869b}
cyan = 		${xrdb:color14:#8ec07c}
background = 	${xrdb:color0:#282828}
foreground = 	${xrdb:color15:#edbbb2}

[bar/default]
;monitor = ${env:MONITOR:DisplayPort-0}
;monitor = ${env:MONITOR:LVDS-1}
;monitor = ${env:MONITOR:HDMI-1}
enable-ipc = true
width = 100%
height = 22
separator =

background = #121212
foreground = #bcbcbc

line-size = 1
line-color = {$xrdb:red}

border-size = 0
border-color = ${colors.foreground}

padding-left = 0
padding-right = 1

module-margin-left = 1
module-margin-right = 1

font-0 = Hack Nerd Font:pixelsize=10;1
font-1 = NotoColorEmoji:fontformat=truetype:scale=12:antialias=false;
font-2 = FontAwesome5Free:fontformat=truetype:scale=5:antialias=false;
;font-2 = "Font Awesome 5 Free:style=Solid:pixelsize=15;3"

; Other modules: cpu uptime xbacklight weather filesystem temperature mutt-wizard memory
modules-left = bspwm xwindow
modules-center =
modules-right = cpu temperature weather volume wlan battery2 date

tray-position = right
tray-padding = 0

wm-restack = bspwm

;override-redirect = true

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

[module/crypto]
type = custom/script
exec = crypto
interval = 0
click-left = $BROWSER https://coinmarketcap.com/ &
click-right = notifycrypto

[module/mutt-wizard]

type = custom/script
exec = mailbox
interval = 5
format-prefix = "Ôê∞ "
;format-underline = ${colors.red}

click-left = st -e neomutt

[module/xwindow]
type = internal/xwindow
label = %title:0:50:...%
format-foreground = #bcbcbc

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
mount-1 = /home

label-mounted-underline = ${colors.cyan}
label-mounted = /: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.gray}

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-foreground = #dadada
label-focused-background = #458588
label-focused-underline= ${colors.foreground}
label-focused-padding = 1

label-occupied = %index%
label-occupied-background = #504945
label-occupied-underline = #dadada
label-occupied-padding = 1

label-urgent = %index%!
label-urgent-background = ${colors.red}
label-urgent-padding = 1

label-empty = %index%
label-empty-foreground = ${colors.lightgray}
label-empty-padding = 1

format = <label-state> <label-mode>

label-monocle = " (M)"
label-tiled = " (T) "
label-floating = " </> "
label-pseudotiled = " (t) "
label-locked = " üîí "
label-sticky = " üìå "
label-private =  " ‚õî "

format-foreground = ${colors.foreground}
format-background = ${colors.background}

[module/xbacklight]
type = internal/xbacklight

; Use the following command to list available cards:
; $ ls -1 /sys/class/backlight/
card = intel_backlight
format = ÔÜÖ <label>

; Available tokens:
;   %percentage% (default)
label = %percentage%%

[module/uptime]
;https://github.com/jaagr/polybar/wiki/User-contributed-modules#uptime
type = custom/script
exec = uptime | awk -F, '{sub(".*up ",x,$1);print $1}'
interval = 100
label =‚è≥ %output%

